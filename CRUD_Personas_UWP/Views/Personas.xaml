<Page
    x:Class="CRUD_Personas_UWP.Views.Personas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CRUD_Personas_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CRUD_Personas_UWP.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:PersonasVM/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            
            <ScrollViewer>
                <ListView x:Name="listadoPersonas" ItemsSource="{Binding ListadoPersonas, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding PersonaSeleccionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsItemClickEnabled="True" ItemClick="ListView_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="20,10">
                                <Image Width="70" Height="70" Source="{Binding Foto}"/>
                                <TextBlock VerticalAlignment="Center" Margin="10" FontSize="15">
                            <Run Text="{Binding Nombre}"/>
                            <Run Text="{Binding Apellido}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal">
                <AppBarButton Label="Agregar empleado" Icon="AddFriend" Click="AppBarButton_Click"/>
                <AppBarButton Label="Borrar Persona" Icon="Delete" Command="{Binding ComandoBorrar}"/>
            </StackPanel>
        </StackPanel>
        
        <RelativePanel Grid.Column="1">
            <TextBox x:Name="NombreTbx" MinWidth="200" PlaceholderText="Nombre" Margin="20" Text="{Binding PersonaSeleccionada.Nombre}"/>
            <TextBox x:Name="ApellidoTbx" MinWidth="200" PlaceholderText="Apellido" RelativePanel.Below="NombreTbx"  Margin="20" Text="{Binding PersonaSeleccionada.Apellido}"/>
            <TextBox x:Name="TlfnTbx" MinWidth="200" PlaceholderText="Teléfono" RelativePanel.Below="ApellidoTbx"  Margin="20" Text="{Binding PersonaSeleccionada.Telefono}"/>
            <TextBox x:Name="DireccionTbx" MinWidth="200" PlaceholderText="Dirección" RelativePanel.Below="TlfnTbx"  Margin="20" Text="{Binding PersonaSeleccionada.Direccion}"/>
            <ComboBox x:Name="departamentosCbx" RelativePanel.Below="DireccionTbx" Margin="20" ItemsSource="{Binding ListadoPersonas}">
                
            </ComboBox>
            <DatePicker x:Name="FechaNacimientoDp" RelativePanel.Below="departamentosCbx" DayFormat="{}{day.integer}"  MonthFormat="{}{month.full}" YearFormat="{}{year.full}"  Margin="20" SelectedDate="{Binding PersonaSeleccionada.FechaNacimiento.Date}"/>
            <Image x:Name="fotoImg" Source="{Binding PersonaSeleccionada.Foto}" RelativePanel.RightOf="FechaNacimientoDp" RelativePanel.AlignTopWithPanel="True" MaxWidth="200" Margin="60" MinWidth="30" MinHeight="30"/>
            <Button x:Name="alterBtn" Content="Confirmar" RelativePanel.Below="FechaNacimientoDp" RelativePanel.AlignLeftWith="fotoImg" Command="{Binding ComandoAlterar}" Visibility="Visible"/>
            <Button x:Name="agregarBtn" Content="Agregar" RelativePanel.Below="FechaNacimientoDp" RelativePanel.AlignLeftWith="fotoImg" Command="{Binding ComandoAgregar}" Click="agregarBtn_Click" Visibility="Collapsed"/>
            <TextBlock x:Name="errorMsg" Text="*Rellene los campos en rojo" Visibility="Visible" RelativePanel.Below="FechaNacimientoDp" Margin="20" Foreground="Red"/>
        </RelativePanel>
    </Grid>
</Page>
